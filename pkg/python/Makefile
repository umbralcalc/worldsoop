# Makefile for python interface for package test_sim.
# File is generated by gopy. Do not edit.
# gopy build -output=python -vm=python3 github.com/worldsoop/worldsoop/pkg/test_sim

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/home/robert/Code/worldsoop/venv/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/usr/include/python3.10
LDFLAGS = -L/usr/lib/x86_64-linux-gnu -lpython3.10 -lcrypt -ldl  -lm -lm

all: gen build

gen:
	gopy gen -no-make -vm=python3 github.com/worldsoop/worldsoop/pkg/test_sim

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm test_sim.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w test_sim.go
	# generate test_sim_go$(LIBEXT) from test_sim.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o test_sim_go$(LIBEXT) test_sim.go
	# use pybindgen to build the test_sim.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _test_sim$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated test_sim.py python wrapper imports this c-code package
	
	$(GCC) test_sim.c  test_sim_go$(LIBEXT) -o _test_sim$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


